{
  "name": "rebate-tracker-polygon",
  "version": "1.0.0",
  "description": "Cash rebate tracking system on Polygon using Spec Kit methodology for spec-driven development",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "build": "npm run compile && tsc",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:amoy": "hardhat run scripts/deploy.ts --network amoy",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "verify:amoy": "hardhat verify --network amoy",
    "node": "hardhat node",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src contracts scripts --ext .ts,.sol",
    "format": "prettier --write \"**/*.{ts,sol,js,json,md}\"",
    "spec:validate": "node scripts/validate-specs.js"
  },
  "keywords": [
    "polygon",
    "solidity",
    "rebate-tracking",
    "spec-kit",
    "typescript",
    "smart-contracts",
    "amoy-testnet"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "hardhat": "^2.19.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.2.0",
    "ts-node": ">=8.0.0",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2"
  }
}
