# Environment Variables for Polygon Development
# Copy this file to .env and fill in your values

# Private key for deployment (DO NOT commit to git)
# Get from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# PolygonScan API key for contract verification (optional)
# Get from: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Report gas usage during tests (optional)
REPORT_GAS=true

